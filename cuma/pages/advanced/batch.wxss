.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.progress {
  font-size: 28rpx;
  color: #666;
}

.image-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 10rpx;
}

.image-item {
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.image-status {
  padding: 10rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.image-item.pending .image-status {
  color: #999;
}

.image-item.processing .image-status {
  color: #1890ff;
}

.image-item.completed .image-status {
  color: #52c41a;
}

.image-item.failed .image-status {
  color: #f5222d;
}

.image-actions {
  padding: 10rpx;
  display: flex;
  justify-content: center;
}

.save-btn {
  background: #1890ff;
  color: #fff;
  font-size: 24rpx;
  padding: 0 20rpx;
}

.loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-text {
  color: #fff;
  font-size: 32rpx;
  background: rgba(0, 0, 0, 0.7);
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
} 