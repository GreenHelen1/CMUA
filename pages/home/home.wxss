/* ÂÆπÂô®Ê†∑Âºè */
.container {
    padding: 30rpx;
    min-height: 100vh;
    background-color: #f5f5f5;
    box-sizing: border-box;
  }
  
  /* È°∂ÈÉ®Ê®™ÂπÖÊ†∑Âºè */
  .banner {
    width: 100%;
    height: 300rpx;
    border-radius: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 40rpx;
    object-fit: cover;
  }
  
  /* Ê®°ÂùóÈÄöÁî®Ê†∑Âºè */
  .module {
    background: #ffffff;
    border-radius: 24rpx;
    padding: 32rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
  .module-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333333;
    margin-bottom: 24rpx;
  }
  
  .module-content {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  /* ÊåâÈíÆÊ†∑Âºè */
  .primary-btn {
    background: #007aff;
    color: #ffffff;
    border-radius: 12rpx;
    padding: 24rpx;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12rpx;
    border: none;
    transition: opacity 0.3s;
  }
  
  .primary-btn:active {
    opacity: 0.8;
  }
  
  .primary-btn::after {
    border: none;
  }
  
  /* ÊªëÂùóÊ®°ÂùóÊ†∑Âºè */
  .slider-module {
    margin-top: 20rpx;
  }
  
  .noise-slider {
    margin: 20rpx 0;
    width: 100%;
  }
  
  .slider-value {
    text-align: center;
    font-size: 28rpx;
    color: #666666;
    margin: 16rpx 0;
  }
  
  .slider-tips {
    display: flex;
    flex-direction: column;
    gap: 8rpx;
    margin-top: 16rpx;
    padding: 16rpx;
    background: #f8f8f8;
    border-radius: 8rpx;
  }
  
  .tip-text {
    font-size: 24rpx;
    color: #999999;
    line-height: 1.4;
  }
  
  /* ÂºπÁ™óÊ†∑Âºè */
  .popup {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .popup-mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4rpx);
  }
  
  .popup-content {
    position: relative;
    background: #ffffff;
    border-radius: 24rpx;
    padding: 32rpx;
    width: 80%;
    max-width: 600rpx;
    z-index: 1001;
    animation: popupSlideIn 0.3s ease-out;
  }
  
  @keyframes popupSlideIn {
    from {
      transform: translateY(20rpx);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
  
  .popup-title {
    font-size: 32rpx;
    font-weight: 600;
    text-align: center;
    margin-bottom: 32rpx;
    color: #333333;
  }
  
  .popup-btn {
    background: #f5f5f5;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
    padding: 24rpx;
    font-size: 30rpx;
    color: #333333;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12rpx;
    transition: background-color 0.3s;
  }
  
  .popup-btn:active {
    background: #e0e0e0;
  }
  
  .popup-btn.cancel {
    background: #f0f0f0;
    color: #999999;
    margin-top: 32rpx;
    margin-bottom: 0;
  }
  
  .popup-btn.cancel:active {
    background: #e5e5e5;
  }
  
  /* ÂõæÊ†áÊ†∑Âºè */
  .iconfont {
    font-size: 36rpx;
  }
  
  .icon-camera::before {
    content: "üì∑";
  }
  
  .icon-album::before {
    content: "üñºÔ∏è";
  }
  
  .icon-wechat::before {
    content: "üí¨";
  }
  
  .icon-image::before {
    content: "üñºÔ∏è";
  }
  
  /* Âä†ËΩΩÈÅÆÁΩ©Ê†∑Âºè */
  .loading-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2000;
    backdrop-filter: blur(4rpx);
  }
  
  .loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20rpx;
    background: rgba(255, 255, 255, 0.9);
    padding: 40rpx;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  }
  
  .loading-icon {
    width: 80rpx;
    height: 80rpx;
    border: 6rpx solid #f3f3f3;
    border-top: 6rpx solid #007aff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  
  .loading-content text {
    font-size: 28rpx;
    color: #666666;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  /* ÂìçÂ∫îÂºèË∞ÉÊï¥ */
  @media screen and (min-width: 768px) {
    .container {
      padding: 40rpx;
      max-width: 1200rpx;
      margin: 0 auto;
    }
  
    .banner {
      height: 400rpx;
    }
  
    .module {
      padding: 40rpx;
    }
  
    .popup-content {
      max-width: 800rpx;
    }
  }