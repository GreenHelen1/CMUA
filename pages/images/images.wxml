<!--pages/images/images.wxml-->
<view class="container">
  <view class="header">
    <text class="title">最近上传的图片</text>
  </view>

  <view class="image-list" wx:if="{{!loading && recentImages.length > 0}}">
    <view class="image-grid">
      <view class="image-item" wx:for="{{recentImages}}" wx:key="index">
        <image 
          src="{{item.path}}" 
          mode="aspectFill" 
          bindtap="previewImage" 
          data-url="{{item.path}}"
        />
        <view class="image-info">
          <text class="image-date">{{item.date}}</text>
          <view class="delete-btn" catchtap="deleteImage" data-index="{{index}}">
            <text class="iconfont icon-delete"></text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="empty-state" wx:if="{{!loading && recentImages.length === 0}}">
    <image src="/images/empty.png" mode="aspectFit" />
    <text>暂无上传的图片</text>
  </view>

  <view class="loading" wx:if="{{loading}}">
    <view class="loading-spinner"></view>
    <text>加载中...</text>
  </view>
</view>