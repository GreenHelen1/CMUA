.container {
    min-height: 100vh;
    background-color: #f5f5f5;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  
  .image-preview {
    background: #ffffff;
    border-radius: 24rpx;
    padding: 20rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    min-height: 400rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .preview-image {
    width: 100%;
    height: 400rpx;
    object-fit: contain;
  }
  
  .control-panel {
    background: #ffffff;
    border-radius: 24rpx;
    padding: 32rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
  .noise-control {
    margin-bottom: 32rpx;
  }
  
  .control-label {
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 16rpx;
    display: block;
  }
  
  .noise-slider {
    margin: 20rpx 0;
  }
  
  .button-group {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .process-btn {
    background: #007aff;
    color: #ffffff;
    border-radius: 12rpx;
    padding: 24rpx;
    font-size: 32rpx;
    font-weight: 500;
  }
  
  .process-btn.disabled {
    background: #cccccc;
    color: #ffffff;
  }
  
  .action-btn {
    background: #f5f5f5;
    color: #333333;
    border-radius: 12rpx;
    padding: 24rpx;
    font-size: 32rpx;
  }
  
  .action-btn[disabled] {
    background: #f0f0f0;
    color: #999999;
  }
  
  .metrics-popup {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .metrics-mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
  }
  
  .metrics-content {
    position: relative;
    background: #ffffff;
    border-radius: 24rpx;
    padding: 32rpx;
    width: 80%;
    max-width: 600rpx;
    z-index: 1001;
  }
  
  .metrics-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32rpx;
  }
  
  .metrics-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333333;
  }
  
  .close-btn {
    font-size: 40rpx;
    color: #999999;
    padding: 10rpx;
  }
  
  .metrics-body {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24rpx;
    margin-bottom: 32rpx;
  }
  
  .metric-item {
    background: #f5f5f5;
    padding: 20rpx;
    border-radius: 12rpx;
    display: flex;
    flex-direction: column;
    gap: 8rpx;
  }
  
  .metric-label {
    font-size: 24rpx;
    color: #666666;
  }
  
  .metric-value {
    font-size: 32rpx;
    font-weight: 600;
    color: #333333;
  }
  
  .metrics-footer {
    border-top: 2rpx solid #f0f0f0;
    padding-top: 24rpx;
  }
  
  .metrics-tips {
    font-size: 24rpx;
    color: #999999;
    line-height: 1.6;
    display: block;
  }
  
  .loading-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2000;
  }
  
  .loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20rpx;
  }
  
  .loading-icon {
    width: 80rpx;
    height: 80rpx;
    border: 6rpx solid #f3f3f3;
    border-top: 6rpx solid #007aff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  } 